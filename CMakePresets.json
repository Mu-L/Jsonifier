    },
    {
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "cacheVariables": {
        "ASAN_ENABLED": "TRUE",
        "CMAKE_BUILD_TYPE": "Release"
      },
      "description": "Target Linux (64-bit) with the Visual Studio development environment. (Release)",
      "inherits": "Linux-Base",
      "name": "x64-gnu-release-asan"
