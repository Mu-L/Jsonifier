      "name": "x64-msvc-debug-asan"
    },
    {
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++-11"
      },
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Linux",
        "type": "equals"
      },
      "description": "Target Linux with the Visual Studio development environment.",
