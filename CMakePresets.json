    },
    {
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "cacheVariables": {
        "ASAN_ENABLED": "TRUE",
        "CMAKE_BUILD_TYPE": "Release"
      },
      "description": "Target Windows (64-bit) with the Visual Studio development environment. (Release)",
